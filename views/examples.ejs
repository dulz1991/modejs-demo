	<script src="../javascripts/jquery.min.js"></script>
	<script>
	$(document).ready(function(){
		$('#menubar ul li').eq(2).addClass('current');
		
		$('.demo').hover(function(){
			$(this).css('background-color','rgba(250,250,250,0.8)');
		},function(){
			$(this).css('background-color','rgba(240,240,240,0)');
		});
	});
	</script>
	<style>
		.demo{margin-bottom:20px;padding:5px}
		.sidebar div{margin:5px 0;}
		.createBtn{margin-bottom:20px;margin-left:-5px;}
	</style>
  </head>
  <body>
   
	<div id="main">
    <% include layout/header.html %>
    
	<div id="site_content">
	
		<div id="sidebar_container">
			<a href="examples/exampleUpload" class="btn btn-primary createBtn">Create New Example</a>
			<img class="paperclip" src="../images/paperclip.png" alt="paperclip" />
			<div class="sidebar">
				<h3>Recent Update</h3>
				<div><a href="examples/example?path=example/example0/index" target="_blank"><h4>0. html5 test url</h4></a></div>
				<% i=0 %>
				<% updateList.forEach(function(item){ %>
				<% i++ %>
					<div><a href="examples/example?path=<%= item.url %>" target="_blank"><h4><%= i %>. <%= item.title %></h4></a></div>
				<% }) %>
